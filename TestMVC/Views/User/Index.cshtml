@{
}
@model List<UserModel>

<style>
    /* Define CSS styles for table */
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    th {
        background-color: #f2f2f2;
    }

    /* Define CSS styles for buttons */
    .action-button {
        margin-right: 5px;
        padding: 5px 10px;
        background-color: #4caf50;
        color: white;
        border: none;
        border-radius: 3px;
        text-decoration: none;
    }

        .action-button:hover {
            background-color: #45a049;
        }

    .add-button {
        padding: 10px 20px;
        background-color: #008CBA;
        color: white;
        border: none;
        border-radius: 5px;
        text-decoration: none;
    }

        .add-button:hover {
            background-color: #005f77;
        }
</style>

<table>
    <thead>
        <tr>
            <th>User ID</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model == null || !Model.Any())
        {
            <tr>
                <td colspan="4">No users available.</td>
            </tr>
        }
        else
        {
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>
                        <a class="action-button" href="@Url.Action("Edit", "User", new { id = user.UserId })">Edit</a>
                        <a class="action-button" href="@Url.Action("Delete", "User", new { id = user.UserId })">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a class="add-button" href="@Url.Action("Add", "User")">Add User</a>
